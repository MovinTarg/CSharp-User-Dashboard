@{
    ViewData["Title"] = "New User Page";
}
@model User_Dashboard.Models.Register
<h1>Add a new user</h1>
<form asp-controller="User" asp-action="Create" method="POST">
    @if (ViewBag.Messages != null)
  {
      <p>@ViewBag.Messages</p>
  }
  <div class="form-group">
    <span asp-validation-for="Email"></span>
    <label asp-for="Email">Email Address:</label>
    <input class="form-control" asp-for="Email">
  </div>
  <div class="form-group">
    <span asp-validation-for="FirstName"></span>
    <label asp-for="FirstName">First name:</label>
    <input class="form-control" asp-for="FirstName">
  </div>
  <div class="form-group">
    <span asp-validation-for="LastName"></span>
    <label asp-for="LastName">Last name:</label>
    <input class="form-control" asp-for="LastName">
  </div>
  <div class="form-group">
    <span asp-validation-for="Password"></span>
    <label asp-for="Password">Password:</label>
    <input class="form-control" asp-for="Password">
  </div>
  <div class="form-group">
    <span asp-validation-for="ConfirmPassword"></span>
    <label asp-for="ConfirmPassword">Confirm Password:</label>
    <input type="password" class="form-control" asp-for="ConfirmPassword">
  </div>
  <button type="submit" class="btn btn-primary">Create</button>
</form>